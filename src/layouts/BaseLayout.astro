---
import '../styles/global.css'
import { ViewTransitions } from 'astro:transitions';
const { title = 'Portfolio', description = 'Photography Portfolio by Mathis Heck' } = Astro.props
const currentPath = Astro.url.pathname
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="Mathis Heck" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <ViewTransitions />
    <script defer src="https://analytics.mathisheck.de/script.js" data-website-id="7bc31e53-7da9-42db-8d5a-44546816e281"></script>
  </head>

  <body>
    <slot />

    <footer>
      <p>&copy; 2026 Mathis Heck Â· <a href="/privacy">Privacy</a></p>
    </footer>

    <style>
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }
</style>

  </body>
</html>
