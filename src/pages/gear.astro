---
import '../styles/global.css'
import '../styles/gear.css'
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="Gear · Mathis Heck">
  <main>
    <h1>Gear</h1>
    <p class="intro">Meine fotografische Ausrüstung.</p>

    <div class="gear-grid">
      <section class="gear-section">
        <h2>Kameras</h2>
        <ul class="gear-list">
          <li>Deine Kamera 1</li>
          <li>Deine Kamera 2</li>
        </ul>
      </section>

      <section class="gear-section">
        <h2>Objektive</h2>
        <ul class="gear-list">
          <li>Dein Objektiv 1</li>
          <li>Dein Objektiv 2</li>
          <li>Dein Objektiv 3</li>
        </ul>
      </section>

      <section class="gear-section">
        <h2>Sonstiges</h2>
        <ul class="gear-list">
          <li>Stativ</li>
          <li>Filter</li>
          <li>Weitere Ausrüstung</li>
        </ul>
      </section>
    </div>
  </main>
</BaseLayout>
