---
import '../styles/global.css'
import '../styles/index.css'
import { cld } from '../lib/cloudinary'
import { getAllSeries } from '../lib/queries'
import { ViewTransitions } from 'astro:transitions';

const heroImage = cld('landingpage_02', 'landingpage')
const series = await getAllSeries()
const featured = series.slice(0, 3)
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Fotografie Portfolio von Mathis Heck" />
    <meta name="author" content="Mathis Heck" />
    <meta property="og:title" content="Mathis Heck" />
    <meta property="og:description" content="Fotografie Portfolio von Mathis Heck" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Mathis Heck" />
    <meta name="twitter:description" content="Fotografie Portfolio von Mathis Heck" />
    <title>Mathis Heck</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <ViewTransitions />
  </head>
  <body>
    <section class="hero">
      <div class="hero-image">
        <img src={heroImage} alt="Landing Image" loading="eager" />
      </div>
      <div class="hero-copy">
        <div class="eyebrow">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="location-icon">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          Trier
        </div>
        <h1>Mathis Heck</h1>
        <p class="lede">20 Jahre alt, Hobbyfotograf aus Trier. <br> Astrofotografie, Street, und alles, was mir visuell auffällt.</p>

        <div class="tags">
          <a href="mailto:kontakt@mathisheck.de" title="Email" class="icon-link">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </a>
          <a href="https://instagram.com/mattyy.tr" target="_blank" title="Instagram" class="icon-link">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <circle cx="17.5" cy="6.5" r="1.5"></circle>
            </svg>
          </a>
        </div>

        <div>
          <a class="cta" href="/work">Portfolio</a>
        </div>
      </div>
    </section>

    <main>
      <div class="section-title">
        <h2>Serien</h2>
      </div>
      <div class="cards">
        {featured.map((s) => (
          <a class="card" href={`/work/${s.slug}`}>
            <div class="thumb">
              <img src={cld(`${s.slug}_01`, s.slug)} alt={s.title} loading="lazy" />
              <div class="overlay">
                <div class="year">{s.year ?? '—'}</div>
                <h3>{s.title}</h3>
              </div>
            </div>
          </a>
        ))}
      </div>
    </main>

    <footer>
      © {new Date().getFullYear()} Mathis Heck
    </footer>
  </body>
</html>
