---
import '../../styles/global.css'
import '../../styles/work.css'
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getAllSeries } from '../../lib/queries'
import { cld } from '../../lib/cloudinary'

const series = await getAllSeries()
const heroImage = cld('landingpage_04', 'landingpage', { width: 1200, quality: '75' })
---

<BaseLayout title="Work Â· Mathis Heck" description="Photographic series and projects by Mathis Heck">

  <main>
    <section class="portfolio-section">
      <div class="hero-image-container">
        <img 
          src={heroImage} 
          loading="eager"
          decoding="async"
          alt="Portfolio Hero" 
          class="hero-portfolio-image" 
        />
      </div>
    </section>

    <div style="text-align: center; margin: 3rem 0;">
      <a href="/all" class="all-images-button">
        View All Images
      </a>
    </div>

    <h1 style="text-align: center;">Series</h1>
    <p class="intro" style="text-align: center;">Photographic series and projects.</p>

    <div class="grid" style="justify-items: center;">
      {series.map((s) => (
          <a class="card" href={`/work/${s.slug}`}>
          <div class="thumb">
            <img 
              src={cld(`${s.slug}_01`, s.slug, { width: 400, quality: "70" })} 
              alt={s.title} 
              loading="lazy"
              decoding="async"
            />
            <div class="overlay">
              {s.year && <div class="year">{s.year}</div>}
              <h2>{s.title}</h2>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
  .hero-image-container {
    width: 100%;
    height: 300px;
    margin: 0 auto;
    background: #0f1114;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .hero-image-container::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(5, 6, 7, 0) 0%, rgba(5, 6, 7, 0.3) 100%);
    pointer-events: none;
  }

  .hero-portfolio-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    filter: saturate(1.05) contrast(1.02);
  }

  .card .thumb img {
    transition: transform 300ms ease;
  }

  .card:hover .thumb img {
    transform: scale(1.05);
  }

  .all-images-button {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: rgba(245, 245, 247, 0.1);
    border: 1px solid var(--border);
    border-radius: 8px;
    color: var(--fg);
    text-decoration: none;
    font-size: 1rem;
    transition: all 160ms ease;
  }

  .all-images-button:hover {
    background: rgba(245, 245, 247, 0.15);
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .portfolio-section {
    margin-bottom: 2rem;
    padding-bottom: 0;
    border-bottom: none;
  }
</style>

